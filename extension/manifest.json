{
  "manifest_version": 2,

  "name" : "ARF",
  "version" : "0.1",
  "description" : "Asynchronous Result Finder",

  "permissions" : [
    "http://104.131.82.233/*",
    "storage"
  ],

  "background" : {
    "persistent" : true,
    "page" : "background.html"
  },

  "page_action": {
    "default_icon": {
    "19": "images/bell_19.png",
    "38": "images/bell_38.png"
    },
    "default_title": "Search Alert",
    "default_popup": "alert.html"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [ "scripts/search-scraper.js" ]
    }
  ]
}
